<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.teslacoil.bttc.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volSeekBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_toRightOf="@+id/volTitle"
        android:layout_alignRight="@+id/timeSeekBar"
        android:layout_alignEnd="@+id/timeSeekBar" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connectButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/section_label" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendButton"
        android:layout_alignTop="@+id/connectButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/closeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/freqSeekBar"
        android:layout_below="@+id/section_label"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_toRightOf="@+id/freqTitle"
        android:layout_toLeftOf="@+id/closeButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vol"
        android:id="@+id/volTitle"
        android:layout_alignTop="@+id/volSeekBar"
        android:layout_alignRight="@+id/timeTitle"
        android:layout_alignEnd="@+id/timeTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Freq"
        android:id="@+id/freqTitle"
        android:layout_alignTop="@+id/freqSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/timeTitle"
        android:layout_below="@+id/freqSeekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeSeekBar"
        android:layout_below="@+id/freqSeekBar"
        android:layout_toRightOf="@+id/timeTitle"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_alignRight="@+id/freqSeekBar"
        android:layout_alignEnd="@+id/freqSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/freqView"
        android:layout_alignTop="@+id/freqSeekBar"
        android:layout_alignStart="@+id/closeButton"
        android:layout_toRightOf="@+id/freqSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/timeView"
        android:layout_alignTop="@+id/timeSeekBar"
        android:layout_toRightOf="@+id/timeSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/volView"
        android:layout_alignTop="@+id/volSeekBar"
        android:layout_toRightOf="@+id/volSeekBar" />

</RelativeLayout>
